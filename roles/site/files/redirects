server {
	listen 80;
	listen [::]:80;

	# SSL configuration
	#
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	#
	# Self signed certs generated by the ssl-cert package
	#
  ssl                 on;
  ssl_certificate     /home/piku/.piku/nginx/sushy.crt;
  ssl_certificate_key /home/piku/.piku/nginx/sushy.key;

	#return 301 $scheme://taoofmac.com$request_uri;
	return 301 https://taoofmac.com$request_uri;
	root /var/www/html;

	# Add index.php to the list if you are using PHP
	index index.html index.htm;

	server_name the.taoofmac.com www.taoofmac.com;

	location / {

		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ =404;
	}
}
